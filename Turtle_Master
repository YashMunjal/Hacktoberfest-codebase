def call_poly():
	x=e.get()
	y = int(x)
	Shapes.polygon(y)
def polygon():
	def back():
		frame7.destroy()
		SHAPE()
	frame6.destroy()
	frame7 = LabelFrame(root, padx=20,pady=30, background='Black')
	frame7.pack(padx=20,pady=20)
	my_label7 = Label(frame7 , text="Enter \n The Number of Sides",font=("Courier",20,'bold'),anchor='center',bg='black',fg='cyan',padx=20,pady=20)
	my_label7.grid(row=0,column=0,columnspan=5)
	global e
	e = Entry(frame7 , width = 30 , bg="white" ,font=("Courier",14,'bold'), fg="red" , borderwidth = 10)
	e.grid(row=2,column=1,columnspan=3,pady=20)
	b71 = Button(frame7,text="Draw",bg='black',font=("Courier",16,'bold'),fg='white',padx=10,pady=10,command=call_poly)
	b71.grid(row=4,column=2,padx=10,pady=10)
	b72 = Button(frame7,text="BACK",bg='black',font=("Courier",16,'bold'),fg='white',padx=10,pady=10,command=back)
	b72.grid(row=6,column=2,padx=10,pady=10)
