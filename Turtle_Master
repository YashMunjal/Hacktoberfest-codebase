def begin():
	def CLR1():
		frame1.destroy()
		SELECT()
	frame1 = LabelFrame(root, padx=20,pady=30, background='Black')
	frame1.pack(padx=20,pady=20)
	my_label1 = Label(frame1 , text="Welcome \n Let's Begin!!",font=("Courier",20,'bold'),anchor='center',bg='black',fg='cyan',padx=20,pady=40)
	my_label1.grid(row=0,column=1)
	b1 = Button(frame1,text="Start",bg='black',font=("Courier",16,'bold'),fg='white',padx=20,pady=20,command=CLR1)
	b1.grid(row=2,column=1)
begin()

root.mainloop()
