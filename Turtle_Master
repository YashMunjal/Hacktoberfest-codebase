def WORD():
	def back():
		frame4.destroy()
		SELECT()
	frame2.destroy()
	frame4 = LabelFrame(root, padx=20,pady=30, background='Black')
	frame4.pack(padx=20,pady=20)
	my_label4 = Label(frame4 , text="Enter \n The Word!!",font=("Courier",20,'bold'),anchor='center',bg='black',fg='cyan',padx=20,pady=20)
	my_label4.grid(row=0,column=0,columnspan=5)
	e = Entry(frame4 , width = 30 , bg="white" ,font=("Courier",14,'bold'), fg="red" , borderwidth = 10)
	e.grid(row=2,column=1,columnspan=3,pady=20)
	b41 = Button(frame4,text="BEGIN",bg='black',font=("Courier",16,'bold'),fg='white',padx=10,pady=10,command=lambda: pro.display(e.get()))
	b41.grid(row=4,column=2,padx=10,pady=10)
	b42 = Button(frame4,text="BACK",bg='black',font=("Courier",16,'bold'),fg='white',padx=10,pady=10,command=back)
	b42.grid(row=6,column=2,padx=10,pady=10)

